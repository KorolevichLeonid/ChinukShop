<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/hi_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nebulabold"
        android:letterSpacing="0."
        android:text="select a product"
        android:textAlignment="center"
        android:textColor="@color/MainColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/equipment"
        android:layout_width="100dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/equipment" />

    <ImageView
        android:id="@+id/sportpit"
        android:layout_width="98dp"
        android:layout_height="84dp"
        android:layout_marginBottom="456dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equipment"
        app:layout_constraintVertical_bias="0.367"
        app:srcCompat="@drawable/sportpit" />


    <Button
        android:id="@+id/button_home"
        android:layout_width="235dp"
        android:layout_height="76dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sportpit" />

    <ImageView
        android:id="@+id/trainer"
        android:layout_width="98dp"
        android:layout_height="112dp"
        android:layout_marginTop="43dp"
        app:layout_constraintBottom_toTopOf="@+id/button_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sportpit"
        app:srcCompat="@drawable/chinuk_2" />

</androidx.constraintlayout.widget.ConstraintLayout>